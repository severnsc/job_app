<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <h1>Your Jobs</h1>
    <button class="btn btn-primary" id="new_job_button"><%= link_to "Create a new job", new_job_path %></button>
    <% if @jobs.any? %>
      <% @jobs.each do |job| %>
        <div class="job">
          <p><%= job.company %> | <%= job.position %> | <%= job.location %></p>
        </div>
      <% end %>
    <% else %>
      <h2>You don't have any jobs!</h2>
    <% end %>
  </div>
</div>